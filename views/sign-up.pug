head
    meta(charset='utf-8')
    title Stratagem
    link(rel='stylesheet' href='../public/style.css' type='text/css')
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet"> 

body
    header
        h2#logo 
            a(href='/') Stratagem
        .user-info
            a(href='/login')#login-btn  Login
            a(href='/signup')#signup-btn Sign Up
    .signup
        h1 Sign Up
        each err in errors
            p#error.msg #{err.msg}
        form(action='/signup' method='post')
            input(type='text' name='username' placeholder='Username' required='true' value=username)
            input(type='password' name='password' placeholder='Password' required='true' value=password)
            input(type='password' name='password2' placeholder='Confirm Password' value=password2 required='true')
            input(type='submit' value='Register').posBtn